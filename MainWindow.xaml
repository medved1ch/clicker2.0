                    <Label x:Name="LbSledDol" Content="" Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="10,360,0,0" VerticalAlignment="Top" Width="126"/>
                </Grid>
            </TabItem>
            <TabItem Header="Shop" Margin="-2,-2,2,0">
